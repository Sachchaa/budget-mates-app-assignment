<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMates.View.SignUp"
             Title="Sign Up">
    <ContentPage.Content>
        <StackLayout>
           
            <Label Text="Full Name : " />
            <Editor x:Name="getName"/>

            <Label Text="Phone Number : " />
            <Editor x:Name="getPhone"/>
            
            <Label Text="Email Address :" />
            <Editor x:Name="getEmail"/>
                
            <Label Text="User Name : " />
            <Editor x:Name="getUserName"/>
            
            <Label Text="Password : " />
            <Editor x:Name="getPassword"/>
            
            <Label Text="Confirm Password : " />
            <Editor x:Name="getCPasword"/>

            <Button Text="Sign up" x:Name="signUpButton" Clicked="SignUp_Clicked"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>