<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMates.View.UpdateUser"
             Title="Update User Details">
    <ContentPage.Content>
              <StackLayout>

            <Label Text="User Name : " />
            <Label x:Name="setUserName" FontSize="Medium"/>
           
            <Label Text="Full Name : " />
            <Editor x:Name="setName" />

            <Label Text="Phone Number : " />
            <Editor x:Name="setPhone" />
            
            <Label Text="Email Address :" />
            <Editor x:Name="setEmail"/>
            
            <Picker x:Name="pickHomeAddress" Title= "Select Address" FontSize="Medium"/>

            <Label Text="Home Address Code:" />
            <Editor x:Name="setHomeAddress"/>
            
            <Label Text="Password : " />
            <Editor x:Name="setPassword"/>

            <Button Text="Update User" x:Name="updateUserButton" Clicked="UpdateUser_Clicked"/>
            <Button Text="Delete User" x:Name="deleteUserButton" Clicked="DeleteUser_Clicked"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
