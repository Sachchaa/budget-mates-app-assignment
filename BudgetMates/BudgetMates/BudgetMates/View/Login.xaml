             x:Class="BudgetMates.View.Login"
             Title="Budget Mates">
    <ContentPage.Content>
        <StackLayout>
            
          
            
            <Label Text="User Name : " FontSize="Small"/>
            <Editor x:Name="getUserName1" FontSize="Small"/>
