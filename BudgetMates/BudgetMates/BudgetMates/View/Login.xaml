            <Editor x:Name="getpassword1" FontSize="Small"/>

            <Button Text="Login" Clicked = "Login_Clicked" x:Name="loginButton"/>
            <Button Text="Sign Up" Clicked = "SignUp_Clicked" x:Name="signUpButtonLoginPage"/>
            
            
            
            
            
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>