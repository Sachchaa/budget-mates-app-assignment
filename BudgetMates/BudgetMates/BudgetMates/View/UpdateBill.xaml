<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMates.View.UpdateBill"
             Title="Update Bills">
             
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10">

            <Picker x:Name="BillType" Title= "Select Bill Type" FontSize="Small"/>
            <Picker x:Name="Address" Title= "Select Address" FontSize="Small"/>
            <Picker x:Name="Month" Title= "Select Month" FontSize="Small"/>
            <Label Text="Amount : " FontSize="Small" /> 
            <Entry FontSize="Small" x:Name="txtAmount"/> 
            <Label Text="Due Date : " FontSize="Small" />
            <Entry FontSize="Small" x:Name="txtDueDate"/> 
            <Button Text="Update Bill" FontSize="Small" x:Name="buttonUpdateBills" Clicked="UpdateBill_Clicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>