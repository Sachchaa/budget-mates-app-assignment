<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMates.View.HouseSettings"
             Title="Generate House Code">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter your house address to create a house code" />

            <Label Text="Adress Line : " />
            <Editor x:Name="getAddressLine"/>

            <Label Text="Surburb : " />
            <Editor x:Name="getSuburb"/>

            <Label Text="State : " />
            <Editor x:Name="getState"/>

            <Label Text="Postcode :" />
            <Editor x:Name="getPostCode"/>

            <Label Text="Number of Rooms :" />
            <Editor x:Name="getNUmberOfRooms"/>

            <Button Text="Add the house" Clicked = "AssignHouse_clicked" />

            <Label Text="Your House Code is : "/>

            <Label x:Name="showHouseCode" Text="{Binding houseCode}"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>