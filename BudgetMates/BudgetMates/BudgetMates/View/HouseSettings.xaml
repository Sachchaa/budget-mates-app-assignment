<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMates.View.HouseSettings" Title="House Settings">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter your house addreess to create a house code" />
            <Editor x:Name="getHouseAddress"/>
            <Label Text="If you already have a house code  enter house code" />
            <Editor x:Name="getHouseCode"/>
            <Button Text="Assign to the house" Clicked = "Assign_clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>